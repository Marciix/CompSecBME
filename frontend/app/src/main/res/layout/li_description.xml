<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:orientation="vertical"
    android:layout_margin="5dp" android:padding="10dp" android:background="@drawable/customborder">



        <TextView
            android:text="Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_caffID" android:layout_weight="1"/>
        <TextView
            android:text="name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_name" android:layout_weight="1"/>
        <TextView
            android:text="description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_description" android:layout_weight="1"/>
        <TextView
            android:text="ownerid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_ownerId" android:layout_weight="1"/>
        <TextView
            android:text="uploadedat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_uploadedAt" android:layout_weight="1"/>
        <TextView
            android:text="owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_owner" android:layout_weight="1"/>


</LinearLayout>